<Window x:Class="ManagementConsole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
         Title="Inventory Management " MinHeight="500" MinWidth="860"    WindowStyle="SingleBorderWindow"  WindowStartupLocation="CenterScreen" Width="820">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1"
              Grid.Column="0"
              Background="#ECBEB4" Margin="0,83,0,0" Grid.RowSpan="3" Grid.ColumnSpan="2" Height="271" VerticalAlignment="Bottom" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="250*"/>
            </Grid.ColumnDefinitions>
            <GroupBox  FontWeight="SemiBold" FontSize="22" Header="Inventory" HorizontalAlignment="Left" Margin="27,0,0,44" VerticalAlignment="Bottom" Height="205" Width="815" Grid.ColumnSpan="2">
                <TabControl Name="TabControlConsole" BorderBrush="Gainsboro" HorizontalAlignment="Left" Height="162" Margin="10,0,0,0" VerticalAlignment="Bottom" Width="783">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                            <ContentPresenter x:Name="ContentSite"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"
                                                              ContentSource="Header"
                                                              Margin="10,2"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabItem Header="In Stock" Name="tab1" FontSize="16" HorizontalAlignment="Left" Width="99">
                        <Grid Margin="0,0,-1,64">

                            <ListView Name="LvItems" HorizontalAlignment="Left" Height="133" VerticalAlignment="Top" Width="778" FontSize="16" FontFamily="{DynamicResource {x:Static SystemFonts.CaptionFontFamilyKey}}" Margin="0,0,0,-69" RenderTransformOrigin="0.496,0.722"  >
                                <ListView.Background>
                                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
                                </ListView.Background>
                                <ListView.View >
                                    <GridView>
                                        <GridViewColumn  Header="Prod.ID" Width="70" DisplayMemberBinding="{Binding Path=Id, StringFormat={}{0:      #}}" />
                                        <GridViewColumn Header="Cate.ID" Width="70" DisplayMemberBinding="{Binding Path=CategoryId, StringFormat={}{0:      #}}" />
                                        <GridViewColumn Header="Product Name" Width="120"  DisplayMemberBinding="{Binding Path=ProductName}" />
                                        <GridViewColumn Header="Sale Price" Width="80" DisplayMemberBinding="{Binding Path=UnitPrice, StringFormat={}{0:   $ #.00}}"/>
                                        <GridViewColumn Header="purchashed Price" Width="140"   DisplayMemberBinding="{Binding Path=SalePrice, StringFormat={}{0:   $ #.00}}" />
                                        <GridViewColumn Header="StockUnit" Width="80"  DisplayMemberBinding="{Binding Path=Quantity, StringFormat={}{0:        #}}"  />
                                        <GridViewColumn Header="AlertUnit" Width="80" DisplayMemberBinding="{Binding Path=TriggerLevel, StringFormat={}{0:        #}}"  />
                                        <GridViewColumn Header="Vendor" Width="70" DisplayMemberBinding="{Binding Path=Vendor}"  />
                                        <GridViewColumn Header="Expiry" Width="60"  DisplayMemberBinding="{Binding Path=ExpiryDate.Date, ConverterCulture='en-US', StringFormat=d}" />
                                    </GridView>
                                </ListView.View>

                            </ListView>
                        </Grid>
                    </TabItem>
                    <TabItem   Header="Order" Name="tab2" FontSize="16" >
                        <Grid Margin="0,0,-21,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="235*"/>
                                <ColumnDefinition Width="741*"/>
                            </Grid.ColumnDefinitions>
                            <ListView Name="LvOrders" HorizontalAlignment="Left" Height="135" VerticalAlignment="Bottom" Width="779" FontSize="16" FontFamily="{DynamicResource {x:Static SystemFonts.CaptionFontFamilyKey}}" Grid.ColumnSpan="2" Margin="0,0,0,-7"  >
                                <ListView.Background>
                                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
                                </ListView.Background>
                                <ListView.View >
                                    <GridView>
                                        <GridViewColumn Header="Order ID" Width="70"   DisplayMemberBinding="{Binding Path=OrderId, StringFormat={}{0:      #}}"/>
                                        <GridViewColumn Header="Invoice Number" Width="125" DisplayMemberBinding="{Binding Path=InvoiceNr, StringFormat={}{0:   #}}"  />
                                        <GridViewColumn Header="Order Date" Width="100"  DisplayMemberBinding="{Binding Path=OrderDate.Date, ConverterCulture='en-US', StringFormat=d}" />
                                        <GridViewColumn Header="Total Price" Width="95"  DisplayMemberBinding="{Binding Path=TotalPrice, StringFormat={}{0:   $ #.00}}"   />
                                        <GridViewColumn Header="Payment method" Width="140" DisplayMemberBinding="{Binding Path=PaymentMethod}"  />
                                        <GridViewColumn Header="Employee ID" Width="120" DisplayMemberBinding="{Binding Path=EmpId, StringFormat={}{0:      #}}"/>
                                        <GridViewColumn Header="Customer ID" Width="120" DisplayMemberBinding="{Binding Path=CustomerId, StringFormat={}{0:      #}}" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>

                    </TabItem>
                    <TabItem   Header="Employee" Name="tab3" FontSize="16" >
                        <Grid Margin="0,0,246,59">
                            <ListView Name="LvEmployee" Height="141" VerticalAlignment="Bottom" FontSize="16" FontFamily="{DynamicResource {x:Static SystemFonts.CaptionFontFamilyKey}}" Margin="0,0,-249,-72" HorizontalAlignment="Left" Width="780"   >
                                <ListView.Background>
                                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
                                </ListView.Background>
                                <ListView.View >
                                    <GridView>
                                        <GridViewColumn  Header="Employee ID" Width="110" DisplayMemberBinding="{Binding Path=Id, StringFormat={}{0:      #}}"/>
                                        <GridViewColumn Header="First Name" Width="110" DisplayMemberBinding="{Binding Path=FirstName, StringFormat={}{0:      #}}" />
                                        <GridViewColumn Header="Last Name" Width="120"  DisplayMemberBinding="{Binding Path=LastName, StringFormat={}{0:      #}}"  />
                                        <GridViewColumn Header="User Name" Width="140" DisplayMemberBinding="{Binding Path=UserName, StringFormat={}{0:      #}}" />
                                        <GridViewColumn Header="Pass Word" Width="150"   DisplayMemberBinding="{Binding Path=PSword, StringFormat={}{0:      #}}" />
                                        <GridViewColumn Header="Salary" Width="150"   DisplayMemberBinding="{Binding Path=Salary,StringFormat={}{0:$ #.00}}" />
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </TabItem>
                </TabControl>
            </GroupBox>
        </Grid>

        <Grid
            Grid.Column="0"
            Grid.ColumnSpan="2"

            Background="#7EB09B" Margin="0,20,0,58.5" Grid.RowSpan="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="257*"/>
                <ColumnDefinition Width="127*"/>
                <ColumnDefinition Width="658*"/>
            </Grid.ColumnDefinitions>
            <GroupBox FontWeight="SemiBold" FontSize="22" Header="Search" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="3" Width="803" Height="174" Grid.Column="1" Margin="0,25,0,24.5">
                <TabControl Name="TabControlSearch" BorderBrush="Gainsboro" HorizontalAlignment="Left" Height="129" Margin="0,10,0,-1" VerticalAlignment="Top" Width="783">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                            <ContentPresenter x:Name="ContentSite"

                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"
                                                              ContentSource="Header"
                                                              Margin="10,2"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabItem Header="In Stock" Name="tab1Search" FontSize="16" HorizontalAlignment="Left" Width="99">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="124*"/>
                                <ColumnDefinition Width="831*"/>
                            </Grid.ColumnDefinitions>
                            <Label FontSize="15" Content="Product Name" HorizontalAlignment="Left" Margin="0,60,0,0" VerticalAlignment="Top" Width="107" Grid.ColumnSpan="2" Height="34" />
                            <TextBox Name="TbProductId" Height="25" TextWrapping="Wrap"  Margin="16,0,565,0" VerticalAlignment="Top" Grid.Column="1" />
                            <Label FontSize="15"  Content="Sale Price" HorizontalAlignment="Left" Margin="156,0,0,0" VerticalAlignment="Top" Grid.Column="1" RenderTransformOrigin="0.526,2.317" />
                            <TextBox Name="TbSalePrice" HorizontalAlignment="Left" Height="25" Margin="275,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="105" Grid.Column="1"/>
                            <Label FontSize="15" Content="Vendor" HorizontalAlignment="Left" Margin="424,1,0,0" VerticalAlignment="Top" Grid.Column="1" Width="71"/>
                            <TextBox Name="TbVendor" HorizontalAlignment="Left" Height="25" Margin="505,1,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="108" Grid.Column="1"/>
                            <TextBox Name="TbProductName" Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="16,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95"/>
                            <Label FontSize="15" Content="Product ID" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <Label FontSize="15" Content="Cat ID" HorizontalAlignment="Left" Margin="0,25,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.002,0.648" Width="69"/>
                            <TextBox Name="TbCategoryId" Grid.Column="1" HorizontalAlignment="Left" Margin="16,30,0,39" TextWrapping="Wrap" Width="95"/>
                            <Label FontSize="15" Content="purchased Price" Grid.Column="1" HorizontalAlignment="Left" Margin="156,35,0,0" VerticalAlignment="Top" Width="119"/>
                            <TextBox Name="TbPurchasedPrice" Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="275,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="106"/>
                            <Label FontSize="15" Content="Stock Unit" Grid.Column="1" HorizontalAlignment="Left" Margin="156,66,0,0" VerticalAlignment="Top" Width="84" Height="26"/>
                            <TextBox Name="TbStockUnit" Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="275,66,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="106"/>
                            <Label FontSize="15" Content="Alert Unit" Grid.Column="1" HorizontalAlignment="Left" Margin="424,39,0,0" VerticalAlignment="Top"/>
                            <TextBox Name="TbAlertUnit" Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="505,39,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="108"/>
                            <Label FontSize="15" Content="Expiry Date" Grid.Column="1" HorizontalAlignment="Left" Margin="417,67,0,-6" VerticalAlignment="Top"/>
                            <TextBox x:Name="TbExpDate" Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="505,67,0,-1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="108"/>


                        </Grid>
                    </TabItem>
                    <TabItem   Header="Order" Name="tab2Search" FontSize="16" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="278*"/>
                                <ColumnDefinition Width="681*"/>
                            </Grid.ColumnDefinitions>
                            <Label FontSize="15" Content="CustomerID" HorizontalAlignment="Left" Margin="304,0,0,0" VerticalAlignment="Top" Width="111" Grid.Column="1" />
                            <TextBox Name="TbCustomerId" Height="25" TextWrapping="Wrap"  Margin="420,0,19,0" VerticalAlignment="Top" Width="110" Grid.Column="1" />
                            <Label FontSize="15"  Content="IncvoiceNumber" HorizontalAlignment="Left" Margin="0,61,0,0" VerticalAlignment="Top" Width="121" />
                            <TextBox Name="TbInvoiceNo" HorizontalAlignment="Left" Height="25" Margin="121,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
                            <Label FontSize="15" Content="Total Price" HorizontalAlignment="Left" Margin="67,0,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                            <TextBox Name="TbTotalPrice" HorizontalAlignment="Left" Height="25" Margin="152,4,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="114" Grid.Column="1"/>
                            <Label FontSize="15" Content="OrderID" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.142,0.604"/>
                            <TextBox Name="TbOrderID" HorizontalAlignment="Left" Height="25" Margin="102,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
                            <Label FontSize="15" Content="Order Date" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top"/>
                            <TextBox Name="TbOderDate" HorizontalAlignment="Left" Height="37" Margin="357,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                            <Label FontSize="15" Content="Payment Method" HorizontalAlignment="Left" Margin="46,59,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                            <TextBox Name="TbPaymentMethod" HorizontalAlignment="Left" Height="25" Margin="180,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" Grid.Column="1"/>
                            <Label Content="Employee ID" HorizontalAlignment="Left" Margin="77.335,123,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                            <TextBox FontSize="15" Name="TbEmployeeID" HorizontalAlignment="Left" Height="37" Margin="240.335,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" Grid.Column="1"/>

                        </Grid>

                    </TabItem>
                    <TabItem   Header="Employee" Name="tab3Search" FontSize="16" >
                        <Grid>
                            <Label FontSize="15" Content="Employee ID" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Width="104" />
                            <TextBox Name="TbEmployeeId" Height="25" TextWrapping="Wrap"  Margin="114,0,475,0" VerticalAlignment="Top" Width="110" />
                            <Label FontSize="15"  Content="First Name" HorizontalAlignment="Left" Margin="5,28,0,0" VerticalAlignment="Top" />
                            <TextBox Name="TbFirstName" HorizontalAlignment="Left" Height="25" Margin="114,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="110"/>
                            <Label FontSize="18" Content="Salary" HorizontalAlignment="Left" Margin="374,116,0,0" VerticalAlignment="Top"/>
                            <TextBox Name="TbSalary" HorizontalAlignment="Left" Height="43" Margin="497,115,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="114"/>
                            <Label Content="Last Name" HorizontalAlignment="Left" Margin="5,55,0,0" VerticalAlignment="Top" Height="30"/>
                            <TextBox Name="TbLastName" HorizontalAlignment="Left" Height="25" Margin="114,60,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="110"/>
                            <Label  FontSize="15" Content="User Name" HorizontalAlignment="Left" Margin="402,3,0,0" VerticalAlignment="Top"/>
                            <TextBox Name="TbUserName" HorizontalAlignment="Left" Height="25" Margin="497,3,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="114"/>
                            <Label Content="Pass Word" FontSize="15" HorizontalAlignment="Left" Margin="402,33,0,35"/>
                            <TextBox Name="TbPassWord" HorizontalAlignment="Left" Height="25" Margin="497,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114"/>


                        </Grid>
                    </TabItem>
                </TabControl>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Background="#519E8A" Margin="0,0,0,103" >
            <Label FontWeight="SemiBold" FontSize="18" Content="INVENTORY MANAGEMENT"  HorizontalAlignment="Left" Margin="296,0,0,0" VerticalAlignment="Top" Height="40" Width="238"/>
        </Grid>
        <StackPanel Height="50" Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal">

            <Button Click="ButtonDelete_Click" FontWeight="SemiBold" FontSize="20" Content="Delete" Width="172" Margin="0,10,0,0"/>
            <Button Click="ButtonUpdate_Click"  FontWeight="SemiBold" FontSize="20" Content="Update" Width="204" Margin="0,10,0,0"/>
            <Button Click="ButtonConfirm_Click" FontWeight="SemiBold" FontSize="20" Content="Confirm" Width="169" Margin="0,10,0,0"/>
            <Button Click="ButtonAdd_Click" Content="Add" Width="159" FontWeight="SemiBold" FontSize="20" Margin="0,10,0,0"/>
            <Button Click="ButtonSearch_Click" Content="Search" Width="152" FontWeight="SemiBold" FontSize="20" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>


</Window>
    