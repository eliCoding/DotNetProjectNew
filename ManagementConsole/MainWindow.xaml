<Window x:Class="ManagementConsole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
         Title="Inventory Management " Height="800" Width="850">
    <Viewbox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1"
              Grid.Column="0"
              Background="#ECBEB4" Margin="0,83,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2" Height="396" VerticalAlignment="Top" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="23*"/>
                    <ColumnDefinition Width="250*"/>
                </Grid.ColumnDefinitions>
                <GroupBox  FontWeight="SemiBold" FontSize="32" Header="Inventory" HorizontalAlignment="Left" Margin="27,10,0,0" VerticalAlignment="Top" Height="364" Width="1012" Grid.ColumnSpan="2">
                    <TabControl Name="TabControlConsole" BorderBrush="Gainsboro" HorizontalAlignment="Left" Height="283" Margin="10,10,0,0" VerticalAlignment="Top" Width="965">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                                <ContentPresenter x:Name="ContentSite"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"
                                                              ContentSource="Header"
                                                              Margin="10,2"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="False">
                                                    <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>
                        <TabItem Header="In Stock" Name="tab1" FontSize="20" HorizontalAlignment="Left" Width="99">
                            <Grid Margin="0,0,-21,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15*"/>
                                    <ColumnDefinition Width="122*"/>
                                    <ColumnDefinition Width="843*"/>
                                </Grid.ColumnDefinitions>
                                <ListView Name="LvItems" HorizontalAlignment="Left" Height="235" VerticalAlignment="Top" Width="953" FontSize="16" FontFamily="{DynamicResource {x:Static SystemFonts.CaptionFontFamilyKey}}" Grid.ColumnSpan="3"  >
                                    <ListView.Background>
                                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
                                    </ListView.Background>
                                    <ListView.View >
                                        <GridView>
                                            <GridViewColumn  Header="Prod.ID" Width="80" DisplayMemberBinding="{Binding Path=Id, StringFormat={}{0:      #}}" />
                                            <GridViewColumn Header="Cate.ID" Width="80" DisplayMemberBinding="{Binding Path=CategoryId, StringFormat={}{0:      #}}" />
                                            <GridViewColumn Header="Product Name" Width="150"  DisplayMemberBinding="{Binding Path=ProductName}" />
                                            <GridViewColumn Header="Sale Price" Width="100" DisplayMemberBinding="{Binding Path=UnitPrice, StringFormat={}{0:   $ #.00}}"/>
                                            <GridViewColumn Header="purchashed Price" Width="150"   DisplayMemberBinding="{Binding Path=SalePrice, StringFormat={}{0:   $ #.00}}" />
                                            <GridViewColumn Header="StockUnit" Width="110"  DisplayMemberBinding="{Binding Path=Quantity, StringFormat={}{0:        #}}"  />
                                            <GridViewColumn Header="AlertUnit" Width="110" DisplayMemberBinding="{Binding Path=TriggerLevel, StringFormat={}{0:        #}}"  />
                                            <GridViewColumn Header="Vendor" Width="180" DisplayMemberBinding="{Binding Path=Vendor}"  />
                                            <GridViewColumn Header="Expiry" Width="110"  DisplayMemberBinding="{Binding Path=ExpiryDate.Date, ConverterCulture='en-US', StringFormat=d}" />
                                        </GridView>
                                    </ListView.View>

                                </ListView>
                            </Grid>
                        </TabItem>
                        <TabItem   Header="Order" Name="tab2" FontSize="20" >
                            <Grid Margin="0,0,-21,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="235*"/>
                                    <ColumnDefinition Width="741*"/>
                                </Grid.ColumnDefinitions>
                                <ListView Name="LvOrders" HorizontalAlignment="Left" Height="235" VerticalAlignment="Top" Width="953" FontSize="16" FontFamily="{DynamicResource {x:Static SystemFonts.CaptionFontFamilyKey}}" Grid.ColumnSpan="2"  >
                                    <ListView.Background>
                                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
                                    </ListView.Background>
                                    <ListView.View >
                                        <GridView>
                                            <GridViewColumn Header="Order ID" Width="100"  DisplayMemberBinding="{Binding Path=OrderId, StringFormat={}{0:      #}}"/>
                                            <GridViewColumn Header="Invoice Number" Width="200" DisplayMemberBinding="{Binding Path=InvoiceNr, StringFormat={}{0:   #}}"  />
                                            <GridViewColumn Header="Order Date" Width="160"  DisplayMemberBinding="{Binding Path=OrderDate.Date, ConverterCulture='en-US', StringFormat=d}" />
                                            <GridViewColumn Header="Total Price" Width="140"  DisplayMemberBinding="{Binding Path=TotalPrice, StringFormat={}{0:   $ #.00}}"   />
                                            <GridViewColumn Header="Payment method" Width="140" DisplayMemberBinding="{Binding Path=PaymentMethod}"  />
                                            <GridViewColumn Header="Employee ID" Width="100" DisplayMemberBinding="{Binding Path=EmpId, StringFormat={}{0:      #}}"/>
                                            <GridViewColumn Header="Customer ID" Width="120" DisplayMemberBinding="{Binding Path=CustomerId, StringFormat={}{0:      #}}" />
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>

                        </TabItem>
                        <TabItem   Header="Employee" Name="tab3" FontSize="20" >
                            <Grid Margin="0,0,-21,0">
                                <ListView Name="LvEmployee" HorizontalAlignment="Left" Height="235" VerticalAlignment="Top" Width="953" FontSize="16" FontFamily="{DynamicResource {x:Static SystemFonts.CaptionFontFamilyKey}}"  >
                                    <ListView.Background>
                                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
                                    </ListView.Background>
                                    <ListView.View >
                                        <GridView>
                                            <GridViewColumn  Header="Employee ID" Width="100" DisplayMemberBinding="{Binding Path=Id, StringFormat={}{0:      #}}"/>
                                            <GridViewColumn Header="First Name" Width="150" DisplayMemberBinding="{Binding Path=FirstName, StringFormat={}{0:      #}}" />
                                            <GridViewColumn Header="Last Name" Width="150"  DisplayMemberBinding="{Binding Path=LastName, StringFormat={}{0:      #}}"  />
                                            <GridViewColumn Header="User Name" Width="150" DisplayMemberBinding="{Binding Path=UserName, StringFormat={}{0:      #}}" />
                                            <GridViewColumn Header="Pass Word" Width="150"   DisplayMemberBinding="{Binding Path=PSword, StringFormat={}{0:      #}}" />
                                            <GridViewColumn Header="Salary" Width="150"   DisplayMemberBinding="{Binding Path=Salary,StringFormat={}{0:$ #.00}}" />
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </GroupBox>
            </Grid>

            <Grid
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#7EB09B" Margin="0,54,0,149.5" Grid.RowSpan="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="257*"/>
                    <ColumnDefinition Width="127*"/>
                    <ColumnDefinition Width="658*"/>
                </Grid.ColumnDefinitions>
                <GroupBox FontWeight="SemiBold" FontSize="32" Header="Search" HorizontalAlignment="Left" Margin="42,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="4" Width="1013" Height="250">
                    <TabControl Name="TabControlSearch" BorderBrush="Gainsboro" HorizontalAlignment="Left" Height="202" Margin="10,-4,0,0" VerticalAlignment="Top" Width="965">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                                <ContentPresenter x:Name="ContentSite"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"
                                                              ContentSource="Header"
                                                              Margin="10,2"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="False">
                                                    <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>
                        <TabItem Header="In Stock" Name="tab1Search" FontSize="20" HorizontalAlignment="Left" Width="99">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="124*"/>
                                    <ColumnDefinition Width="831*"/>
                                </Grid.ColumnDefinitions>
                                <Label FontSize="18" Content="Product Name" HorizontalAlignment="Left" Margin="0,128,0,0" VerticalAlignment="Top" Width="133" Grid.ColumnSpan="2" />
                                <TextBox Name="ProductId" Height="43" TextWrapping="Wrap"  Margin="21,11,703,0" VerticalAlignment="Top" Grid.Column="1" />
                                <Label FontSize="18"  Content="Sale Price" HorizontalAlignment="Left" Margin="235,10,0,0" VerticalAlignment="Top" Grid.Column="1" RenderTransformOrigin="0.526,2.317" />
                                <TextBox Name="TbSalePrice" HorizontalAlignment="Left" Height="43" Margin="394,1,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                                <Label FontSize="18" Content="Vendor" HorizontalAlignment="Left" Margin="602,71,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                                <TextBox Name="TbVendor" HorizontalAlignment="Left" Height="43" Margin="710,71,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="114" Grid.Column="1"/>
                                <TextBox Name="TbProductName" Grid.Column="1" HorizontalAlignment="Left" Height="45" Margin="21,119,0,-2" TextWrapping="Wrap" VerticalAlignment="Top" Width="110"/>
                                <Label Content="Product ID" HorizontalAlignment="Left" Margin="0,17,0,0" VerticalAlignment="Top"/>
                                <Label Content="Cat ID" HorizontalAlignment="Left" Margin="0,69,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.002,0.648" Width="115"/>
                                <TextBox Name="TbCategoryId" Grid.Column="1" HorizontalAlignment="Left" Margin="21,69,0,50" TextWrapping="Wrap" Width="110"/>
                                <Label Content="purchased Price" Grid.Column="1" HorizontalAlignment="Left" Margin="235,69,0,0" VerticalAlignment="Top" Width="159"/>
                                <TextBox Name="TbPurchasedPrice" Grid.Column="1" HorizontalAlignment="Left" Height="37" Margin="394,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                                <Label Content="Stock Unit" Grid.Column="1" HorizontalAlignment="Left" Margin="235,115,0,0" VerticalAlignment="Top" Width="107"/>
                                <TextBox Name="TbStockUnit" Grid.Column="1" HorizontalAlignment="Left" Height="43" Margin="394,119,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
                                <Label Content="Alert Unit" Grid.Column="1" HorizontalAlignment="Left" Margin="602,11,0,0" VerticalAlignment="Top"/>
                                <TextBox Name="TbAlertUnit" Grid.Column="1" HorizontalAlignment="Left" Height="44" Margin="714,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="110"/>

                            </Grid>

                        </TabItem>
                        <TabItem   Header="Order" Name="tab2Search" FontSize="20" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="278*"/>
                                    <ColumnDefinition Width="681*"/>
                                </Grid.ColumnDefinitions>
                                <Label FontSize="18" Content="CustomerID" HorizontalAlignment="Left" Margin="421.335,10,0,0" VerticalAlignment="Top" Width="111" Grid.Column="1" />
                                <TextBox Name="TbCustomerId" Height="43" TextWrapping="Wrap"  Margin="561.335,5,10,0" VerticalAlignment="Top" Width="110" Grid.Column="1" />
                                <Label FontSize="18"  Content="IncvoiceNumber" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" />
                                <TextBox Name="TbInvoiceNo" HorizontalAlignment="Left" Height="43" Margin="174,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
                                <Label FontSize="18" Content="Total Price" HorizontalAlignment="Left" Margin="77.335,10,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                                <TextBox Name="TbTotalPrice" HorizontalAlignment="Left" Height="43" Margin="240.335,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="114" Grid.Column="1"/>
                                <Label Content="OrderID" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.142,0.604"/>
                                <TextBox Name="TbOrderID" HorizontalAlignment="Left" Height="40" Margin="174,4,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
                                <Label Content="Order Date" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top"/>
                                <TextBox Name="TbOderDate" HorizontalAlignment="Left" Height="37" Margin="174,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
                                <Label Content="Payment Method" HorizontalAlignment="Left" Margin="69.335,68,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                                <TextBox Name="TbPaymentMethod" HorizontalAlignment="Left" Height="43" Margin="240.335,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" Grid.Column="1"/>
                                <Label Content="Employee ID" HorizontalAlignment="Left" Margin="77.335,123,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                                <TextBox Name="TbEmployeeID" HorizontalAlignment="Left" Height="37" Margin="240.335,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" Grid.Column="1"/>


                            </Grid>

                        </TabItem>
                        <TabItem   Header="Employee" Name="tab3Search" FontSize="20" >
                            <Grid>
                                <Label FontSize="18" Content="Employee ID" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top" Width="120" />
                                <TextBox Name="TbEmployeeId" Height="43" TextWrapping="Wrap"  Margin="153,15,692,0" VerticalAlignment="Top" Width="110" />
                                <Label FontSize="18"  Content="First Name" HorizontalAlignment="Left" Margin="5,61,0,0" VerticalAlignment="Top" />
                                <TextBox Name="TbFirstName" HorizontalAlignment="Left" Height="43" Margin="155,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="110"/>
                                <Label FontSize="18" Content="Salary" HorizontalAlignment="Left" Margin="374,116,0,0" VerticalAlignment="Top"/>
                                <TextBox Name="TbSalary" HorizontalAlignment="Left" Height="43" Margin="497,115,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="114"/>
                                <Label Content="Last Name" HorizontalAlignment="Left" Margin="5,115,0,0" VerticalAlignment="Top"/>
                                <TextBox Name="TbLastName" HorizontalAlignment="Left" Height="36" Margin="155,116,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="110"/>
                                <Label Content="User Name" HorizontalAlignment="Left" Margin="374,0,0,0" VerticalAlignment="Top"/>
                                <TextBox Name="TbUserName" HorizontalAlignment="Left" Height="44" Margin="497,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="114"/>
                                <Label Content="Pass Word" HorizontalAlignment="Left" Margin="374,58,0,67"/>
                                <TextBox Name="TbPassWord" HorizontalAlignment="Left" Height="47" Margin="497,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114"/>


                            </Grid>
                        </TabItem>
                    </TabControl>
                </GroupBox>
            </Grid>
            <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Background="#519E8A" Margin="0,0,0,186" >
                <Label FontWeight="SemiBold" FontSize="25" Content="INVENTORY MANAGEMENT"  HorizontalAlignment="Left" Margin="368,10,0,0" VerticalAlignment="Top" Height="44" Width="350"/>
            </Grid>
            <StackPanel Height="50" Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal">
                <Button Click="ButtonDelete_Click" FontWeight="Bold" FontSize="25" Content="Delete" Width="209"/>
                <Button Click="ButtonEdit_Click"  FontWeight="Bold" FontSize="25" Content="Update" Width="220"/>
                <Button Click="ButtonPrint_Click" FontWeight="Bold" FontSize="25" Content="Print" Width="202"/>
                <Button Click="ButtonAdd_Click" Content="Add" Width="224" FontWeight="Bold" FontSize="25"/>
                <Button Click="ButtonSearch_Click" Content="Search" Width="233" FontWeight="Bold" FontSize="25"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
    