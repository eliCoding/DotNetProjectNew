<Window x:Class="ManagementConsole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
         Title="Inventory Management " Height="800" Width="1100">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1"
          Grid.Column="0"
          Background="#ECBEB4" Margin="0,83,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2" Height="396" VerticalAlignment="Top" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="250*"/>
            </Grid.ColumnDefinitions>
            <GroupBox  FontWeight="SemiBold" FontSize="32" Header="Inventory" HorizontalAlignment="Left" Margin="43,10,0,0" VerticalAlignment="Top" Height="364" Width="1012" Grid.ColumnSpan="2">
                <ListView HorizontalAlignment="Left" Height="285" Margin="10,10,0,0" VerticalAlignment="Top" Width="975">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View >
                        <GridView  >
                            <GridViewColumn  Header="ID" Width="40"  />
                            <GridViewColumn Header="Product" Width="130" />
                            <GridViewColumn Header="Qty" Width="60"   />
                            <GridViewColumn Header="SalePrice" Width="150" />
                            <GridViewColumn Header="PurchasePrice" Width="210"    />
                            <GridViewColumn Header="Discount" Width="150"   />
                            <GridViewColumn Header="Vendor" Width="120"  />
                            <GridViewColumn Header="Expiry" Width="110"   />

                        </GridView>
                    </ListView.View>
                </ListView>


            </GroupBox>
        </Grid>

        <Grid
          Grid.Column="0"
          Grid.ColumnSpan="2"
          Background="#7EB09B" Margin="0,54,0,156.5" Grid.RowSpan="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="257*"/>
                <ColumnDefinition Width="127*"/>
                <ColumnDefinition Width="658*"/>
            </Grid.ColumnDefinitions>
            <GroupBox FontWeight="SemiBold" FontSize="32" Header="Search" HorizontalAlignment="Left" Margin="42,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="4" Width="1013" Height="250">
                <Grid Margin="0,10,228,-10">
                    <Label Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
                    <TextBox Height="53" TextWrapping="Wrap" Text="" Margin="112,0,507,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" />
                    <Label Content="Discount" HorizontalAlignment="Left" Margin="0,101,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.207,1.566"/>
                    <TextBox HorizontalAlignment="Left" Height="53" Margin="143,101,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150"/>
                    <Button Content="Search" HorizontalAlignment="Left" Margin="745,0,-188,0" VerticalAlignment="Top" Width="216" Height="63"/>
                    <Label Content="Vendor" HorizontalAlignment="Left" Margin="343,10,0,0" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" Height="53" Margin="462,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="174"/>
                    <Label Content="Expiry Date" HorizontalAlignment="Left" Margin="343,101,0,0" VerticalAlignment="Top"/>
                    <StackPanel Margin="0,0,222,0">
                        <StackPanel.Resources>
                            <Style TargetType="Calendar"
           x:Key="DateTimeCalendar">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="LightYellow"/>
                                <Setter Property="BorderThickness" Value="5"/>
                            </Style>

                        </StackPanel.Resources>
                        <DatePicker x:Name="dpDate" Background="LightPink"
              CalendarStyle="{StaticResource DateTimeCalendar}" SelectedDateFormat="Long" SelectedDate="{x:Static sys:DateTime.Now}" FontWeight="SemiBold"
                                    
                  DisplayDateStart="1/01/17" DisplayDateEnd="12/31/17" 
                  FirstDayOfWeek="Monday" HorizontalAlignment="Left" Margin="518,105,-353,0" VerticalAlignment="Top" Width="383" Height="63" RenderTransformOrigin="0.373,0.476"/>
                    </StackPanel>




                </Grid>


            </GroupBox>
        </Grid>


        <Grid Grid.Row="0"
          Grid.Column="0"
          Grid.ColumnSpan="2"
          Background="#519E8A" Margin="0,0,0,186" >
            <Label FontWeight="Bold" FontSize="25" Content="INVENTORY MANAGEMENT"  HorizontalAlignment="Left" Margin="368,10,0,0" VerticalAlignment="Top" Height="44" Width="350"/>

        </Grid>

        <StackPanel Height="50" Grid.Row="3"
                Grid.ColumnSpan="2"
                Orientation="Horizontal">

            <Button FontWeight="Bold" FontSize="25" Content="Delete" Width="362"/>
            <Button FontWeight="Bold" FontSize="25" Content="Edit" Width="362"/>
            <Button FontWeight="Bold" FontSize="25" Content="Print" Width="377"/>
        </StackPanel>
    </Grid>
</Window>
    